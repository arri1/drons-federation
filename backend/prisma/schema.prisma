generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Participant {
  id        String   @id @default(uuid())
  username  String   @unique @db.VarChar(100)
  avatar    String?  @default("üöÅ") @db.VarChar(50)
  rating    Int      @default(1000)
  wins      Int      @default(0)
  losses    Int      @default(0)
  draws     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  eventRegistrations EventRegistration[]

  @@index([rating(sort: Desc)], map: "idx_participants_rating")
  @@map("participants")
}

model Event {
  id                String   @id @default(uuid())
  title             String   @db.VarChar(255)
  description       String?  @db.Text
  eventDate         DateTime @map("event_date") @db.Date
  eventTime         DateTime? @map("event_time") @db.Time(6)
  location          String   @db.VarChar(255)
  status            String   @default("preparation") @db.VarChar(50)
  registrationOpen  Boolean  @default(false) @map("registration_open")
  maxParticipants   Int?     @map("max_participants")
  createdAt         DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt         DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  eventRegistrations EventRegistration[]

  @@index([eventDate(sort: Desc)], map: "idx_events_date")
  @@map("events")
}

model News {
  id          String    @id @default(uuid())
  title       String    @db.VarChar(255)
  content     String    @db.Text
  excerpt     String?   @db.Text
  imageUrl    String?   @map("image_url") @db.VarChar(500)
  author      String?   @db.VarChar(100)
  published   Boolean   @default(false)
  publishedAt DateTime? @map("published_at") @db.Timestamptz(6)
  createdAt   DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([published, publishedAt(sort: Desc)], map: "idx_news_published")
  @@map("news")
}

model EventRegistration {
  id            String     @id @default(uuid())
  eventId       String     @map("event_id")
  participantId String     @map("participant_id")
  registeredAt  DateTime   @default(now()) @map("registered_at") @db.Timestamptz(6)
  status        String     @default("registered") @db.VarChar(50)

  event       Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  participant Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)

  @@unique([eventId, participantId])
  @@map("event_registrations")
}

